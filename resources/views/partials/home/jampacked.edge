  {
    title: 'Config management',
    href: 'https://v6-alpha.adonisjs.com/docs/config'
  },
  {
    title: 'Type-safe environment variables',
    href: 'https://v6-alpha.adonisjs.com/docs/environment-variables'
  },
  {
    title: 'Thoughtful folder structure',
    href: 'https://v6-alpha.adonisjs.com/docs/folder-structure'
  },
  {
    title: 'Routing and controllers',
    href: 'https://v6-alpha.adonisjs.com/docs/routing'
  },
  {
    title: 'Middleware',
    href: 'https://v6-alpha.adonisjs.com/docs/middleware'
  },
  {
    title: 'BodyParser',
    href: 'https://v6-alpha.adonisjs.com/docs/bodyparser-middleware'
  },
  {
    title: 'File uploads',
    href: 'https://v6-alpha.adonisjs.com/docs/file-uploads'
  },
  {
    title: 'Type-safe event emitter',
    href: 'https://v6-alpha.adonisjs.com/docs/emitter'
  },
  {
    title: 'Encryption',
    href: 'https://v6-alpha.adonisjs.com/docs/security/encryption'
  },
  {
